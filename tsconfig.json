{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "target": "es2017",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "noImplicitThis": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "src": [
        "src"
      ]
    },
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "public"
  ]
}
